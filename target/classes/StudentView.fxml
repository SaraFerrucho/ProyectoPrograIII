<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"  fx:controller="co.edu.uptcsoft.controller.StudentViewController"
prefWidth="900" prefHeight="600">
    
    <!-- TITULO SUPERIOR -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Button text="← Regresar" fx:id="btnBack" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
            <Label text="GESTIÓN DE ESTUDIANTES" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
        </HBox>
    </top>
    
    <!-- CONTENIDO CENTRAL -->
    <center>
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20;">
            
            <!-- TABLA -->
            <TableView fx:id="tableStudents" prefHeight="400" prefWidth="800">
                <columns>
                    <TableColumn text="ID" fx:id="colId" prefWidth="100"/>
                    <TableColumn text="Nombre" fx:id="colName" prefWidth="250"/>
                    <TableColumn text="Correo" fx:id="colEmail" prefWidth="250"/>
                    <TableColumn text="Curso" fx:id="colCourse" prefWidth="200"/>
                </columns>
            </TableView>
            
            <!-- BOTONES -->
            <HBox alignment="CENTER" spacing="15">
                <Button text="Registrar nuevo estudiante" fx:id="btnAddStudent" 
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 10 20;"/>
                <Button text="Eliminar estudiante" fx:id="btnDeleteStudent"
                        style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-padding: 10 20;"/>
            </HBox>
            
        </VBox>
    </center>
    
</BorderPane>
