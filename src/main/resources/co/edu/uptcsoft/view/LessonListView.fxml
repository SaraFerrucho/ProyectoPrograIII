<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uptcsoft.viewController.LessonListController"
            prefWidth="900" prefHeight="600">

    <!-- BARRA SUPERIOR -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 10;" alignment="CENTER_LEFT">
            <Button text="← Volver" fx:id="btnBack" 
                    onAction="#goBackToCourses"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
            <Label text="LECCIONES" style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- CONTENIDO CENTRAL -->
    <center>
        <HBox spacing="30" alignment="TOP_CENTER" style="-fx-padding: 20;">
            
            <!-- TABLA DE LECCIONES -->
            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <Label text="Listado de lecciones"
                       style="-fx-font-size: 14; -fx-font-weight: bold;" />

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <CheckBox fx:id="chkSelectAll" text="Marcar todo" />
                </HBox>

                <TableView fx:id="tableLessons" prefHeight="400" prefWidth="500" editable="true">
                    <columns>
                        <TableColumn fx:id="colSelect" text="✓" prefWidth="50" />
                        <TableColumn fx:id="colLessonName" text="Lección" prefWidth="250" />
                        <TableColumn fx:id="colDone" text="Hecha" prefWidth="80" />
                        <TableColumn fx:id="colLessonType" text="Tipo" prefWidth="150" />
                    </columns>
                </TableView>
            </VBox>

            <!-- BOTONES -->
            <VBox spacing="20" alignment="CENTER_RIGHT" prefWidth="200">
                <Button fx:id="btnAddLesson" text="Añadir lección"
                    onAction="#onAddLesson"
                    style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 10 20;" />

                <Button fx:id="btnDeleteLesson" text="Eliminar lección"
                onAction="#onDeleteLesson"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 10 20;" />

            <Button fx:id="btnEditLesson" text="Editar tipo de lección"
             onAction="#onEditLesson"
                style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 10 20;" />
                </VBox>
        </HBox>
    </center>
</BorderPane>
