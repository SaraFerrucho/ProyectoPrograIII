<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uptcsoft.viewController.EditCourseController"
            style="-fx-background-color: #f4f4f4;">

    <!-- Top: barra de título -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" 
              style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="EDITAR CURSO" 
                   style="-fx-text-fill: white; 
                          -fx-font-size: 20; 
                          -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Centro: formulario -->
       <center>
              <VBox alignment="CENTER" spacing="20" 
                     style="-fx-padding: 40;">
            
              <Label text="Editar información del curso"
                   style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

       <GridPane hgap="15" vgap="15">
              <Label text="ID del curso:" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;"/>
              <TextField fx:id="txtCourseId" GridPane.columnIndex="1"
                            style="-fx-background-radius: 8; -fx-padding: 6;" editable="false"/>

              <Label text="Título del curso:" GridPane.rowIndex="1"
                     style="-fx-font-size: 14; -fx-text-fill: #2c3e50;"/>
              <TextField fx:id="txtCourseTitle" GridPane.columnIndex="1" GridPane.rowIndex="1"
                            style="-fx-background-radius: 8; -fx-padding: 6;"/>
       </GridPane>



       <HBox spacing="20" alignment="CENTER">
              <Button fx:id="btnSave" text="Guardar cambios"
                     style="-fx-background-color: #2c3e50; 
                               -fx-text-fill: white; 
                               -fx-font-size: 14; 
                               -fx-background-radius: 20; 
                               -fx-padding: 8 20;"/>
              <Button fx:id="btnCancel" text="Cancelar"
                     style="-fx-background-color: #95a5a6; 
                               -fx-text-fill: white; 
                               -fx-font-size: 14; 
                               -fx-background-radius: 20; 
                               -fx-padding: 8 20;"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
