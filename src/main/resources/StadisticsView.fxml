<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"  fx:controller="co.edu.uptcsoft.controller.StadisticViewController"
prefWidth="900" prefHeight="600">
    
    <!-- TITULO SUPERIOR -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Button text="← Regresar" fx:id="btnBack" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
            <Label text="ESTADÍSTICAS DE ESTUDIANTES" 
                   style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
        </HBox>
    </top>
    
    <!-- CONTENIDO CENTRAL -->
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
            <Label text="Número de estudiantes por curso" 
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            
            <!-- OPCION GRAFICO DE BARRAS -->
            <BarChart fx:id="barChart" prefWidth="800" prefHeight="450">
                <xAxis>
                    <CategoryAxis label="Curso"/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="Cantidad de estudiantes"/>
                </yAxis>
            </BarChart>
            
            <!-- SI PREFIERES PIECHART, SOLO DESCOMENTA -->
            <!-- <PieChart fx:id="pieChart" prefWidth="700" prefHeight="450"/> -->
        </VBox>
    </center>
    
</BorderPane>
